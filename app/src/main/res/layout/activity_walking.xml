<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_zhu"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/top_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--<ImageView-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:padding="5dp"-->
                <!--android:layout_width="140px"-->
                <!--android:layout_height="140px"-->
                <!--android:src="@mipmap/jiaoya" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/step_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="92px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="步数"
                        android:textColor="@color/white"
                        android:textSize="50px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!--<ImageView-->
                <!--android:src="@mipmap/huomiao"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:padding="5dp"-->
                <!--android:layout_width="140px"-->
                <!--android:layout_height="140px" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/calories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="92px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:text="能量"
                        android:textColor="@color/white"
                        android:textSize="50px" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/share_imageButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginBottom="-30dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:alpha="1"
            android:src="@mipmap/icon_fenxiang" />

        <TextView
            android:id="@+id/manry_count"
            android:text="8888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="200px" />

        <ImageView
            android:id="@+id/Calculation_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:src="@mipmap/submission_button"
             />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:background="#212121"
    android:layout_height="82px">
    <TextView
        android:text="名字"
        android:textSize="44px"
        android:padding="10px"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:text="手机号"
        android:textSize="44px"
        android:padding="10px"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:text="地区"
        android:textSize="44px"
        android:padding="10px"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:text="总资产"
        android:textSize="44px"
        android:padding="10px"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/Relativelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"></RelativeLayout>

    </ScrollView>
</LinearLayout>