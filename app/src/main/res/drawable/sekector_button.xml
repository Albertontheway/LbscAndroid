<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:color="#f8f8f8"
        android:state_pressed="true">
        <shape>
            <stroke android:width="1dip" android:color="#9ea19e" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="1dip" android:color="#b2b3b2" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#a0a1a0" android:endColor="#b8bab8"></gradient>
            <stroke android:width="1dip" android:color="#8e918e" />
            <corners android:radius="4dip" />
        </shape>
    </item>
</selector>